<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo base -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/>
        </shape>
    </item>

    <!-- Efecto de rejilla hologrÃ¡fica -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#30000000"
                android:dashWidth="10dp"
                android:dashGap="15dp"/>
        </shape>
    </item>

    <!-- Degradado diagonal -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#001A237E"
                android:endColor="#000D47A1"
                android:angle="135"/>
        </shape>
    </item>
</layer-list>