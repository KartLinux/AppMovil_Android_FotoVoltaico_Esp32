<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo semi-transparente -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Borde neÃ³n con efecto de resplandor -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/neon_blue"
                android:dashWidth="4dp"
                android:dashGap="2dp"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Efecto de sombra exterior -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="2dp"
                android:color="#4000FFFF"/>
            <corners android:radius="12dp"/>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"/>
        </shape>
    </item>

    <!-- Efecto de luz interior -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1000FFFF"
                android:endColor="@android:color/transparent"
                android:angle="135"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</layer-list>